pipeline {
    agent any                        // тот же сервер, где стоит Jenkins
    tools {                          // предварительно добавьте в «Global Tool Configuration»
        jdk   'jdk17'               // Temurin 17 (или другое имя, если задали своё)
        maven 'maven3'              // Maven 3.x
    }

    environment {
        IMAGE_NAME        = 'marmevladek/devopsl-backend'
        DOCKER_HUB_USER   = credentials('DOCKER_HUB_USERNAME')
        DOCKER_HUB_TOKEN  = credentials('DOCKER_HUB_TOKEN')
        SONAR_TOKEN       = credentials('SONAR_TOKEN')
    }

    stages {

        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Build (skip tests)') {
            steps {
                dir('backend-service') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('backend-service') {
                    sh 'mvn test'
                }
            }
            post {
                always { junit 'backend-service/target/surefire-reports/*.xml' }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('backend-service') {
                    withSonarQubeEnv('SonarQubeServer') {
                        sh """
                            mvn clean verify sonar:sonar \
                              -Dsonar.projectKey=asdasd \
                              -Dsonar.projectName='asdasd' \
                              -Dsonar.host.url=http://localhost:30015 \
                              -Dsonar.token=sqp_87485af380bcd9acfd35646c9e2d4927373d5927
                        """
                    }
                }
            }
        }
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

    }
}
